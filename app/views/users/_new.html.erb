    
    <%= form_for(@user, remote: true) do |f| %>
    <%= render 'shared/error_messages' %>
      <%= f.label :name , :style=>'text-align:left !important;' %><br>
      <%= f.text_field :name %><br>
      <%= f.label :email , :style=>'text-align:left !important;' %><br>
      <%= f.email_field :email %><br>
      <%= f.label :password , :style=>'text-align:left !important;'%><br>
      <%= f.password_field :password %><br>
      <%= f.label :password_confirmation, "Confirmation", :style=>'text-align:left !important;'%> 
      	<br>
      <%= f.password_field :password_confirmation %>
		<div class='row row-padding'></div>
      <%= f.submit "Create my account", class: "btn btn-primary", :style=>'width:100%;', id: "register_id" %>
    <% end %>
    <div class='row row-padding'></div>